<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="#ffffff"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    >

    <TextView
        android:id="@+id/tvl_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_cart"
            android:ellipsize="end"
        android:layout_marginLeft="5dp"
        android:text="你好啊"
        android:lines="1"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_nor"
        android:layout_below="@+id/tvl_describe"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:drawableLeft="@drawable/ic_promo_index_live_views"
        android:drawablePadding="5dp"
        android:text="2.3万"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/iv_cart"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:src="@drawable/ic_22_hide"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaaa"
        android:textSize="10sp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/tvl_describe"
        android:layout_alignStart="@+id/tvl_describe" />



</RelativeLayout>